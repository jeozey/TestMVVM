<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="user"
            type="com.rj.testmvvm.User"/>
        <variable
            name="vm"
            type="com.rj.testmvvm.UserViewModel"/>
    </data>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <EditText
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:hint="请输入用户名"
           android:text="@={user.name}"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:hint="请输入密码"
           android:inputType="textPassword"
           android:text="@={user.pass}"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:text="@={user.now}"/>
       <Button
           android:text="changeUserNow"
           android:textAllCaps="false"
           android:onClick="@{view->vm.changeUser(view)}"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
       <Button
           android:text="login"
           android:textAllCaps="false"
           android:onClick="@{view->vm.login(view)}"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
   </LinearLayout>
</layout>
